{
    "title": "Chat Function",
    "description": "Definition of chat function schema model.",
    "definitions": {
        "Recipient": {
            "$id": "#Recipient",
            "description": "User name",
            "type": "object",
            "properties": {
                "name": {
                    "description": "The user name.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "additionalProperties": false
        },
        "ConnectionData": {
            "$id": "#ConnectionData",
            "description": "Application connection information",
            "type": "object",
            "properties": {
                "host": {
                    "description": "The host name of client web server.",
                    "type": "string"
                },
                "port": {
                    "description": "The port number of client web server.",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 65536,
                    "exclusiveMaximum": true
                }
            },
            "required": [
                "host",
                "port"
            ],
            "additionalProperties": false
        },
        "RequestedDatum": {
            "$id": "#RequestedDatum",
            "description": "Application request configuration",
            "type": "object",
            "properties": {
                "user": {
                    "description": "The user name.",
                    "type": "string"
                },
                "message": {
                    "description": "The message to set, min length 1 char and max length 160 chars ",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 160
                },
                "timestamp": {
                    "description": "The timestamp of when the fault indication was created, according to ISO8601 format: YYYY-MM-DDTHH:MM:SS.mmmmmmz (z is the relative time zone offset in hours and minutes to UTC in the format +hh:mm or -hh:mm. If UTC is used z will be 'Z' instead of '+00:00').",
                    "type": "string",
                    "format": "date-time"
                },
                "recipients": {
                    "description": "User names of all recipients",
                    "type": "array",
                    "uniqueItems": true,
                    "minItems": 1,
                    "items": {
                        "$ref": "#definitions/Recipient"
                    }
                }
            },
            "required": [
                "user",
                "message"
            ],
            "additionalProperties": false
        },
        "Function": {
            "$id": "#Function",
            "description": "The function data",
            "type": "object",
            "properties": {
                "name": {
                    "description": "The function name.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ],
            "additionalProperties": false
        }
    },
    "type": "object",
    "properties": {
        "function": {
            "description": "The specific server function to be used by incoming service client.",
            "$ref": "#definitions/Function"
        },
        "connectionData": {
            "description": "Connection data.",
            "$ref": "#definitions/ConnectionData"
        },
        "requestedData": {
            "description": "Requested data.",
            "type": "array",
            "items": {
                "$ref": "#definitions/RequestedDatum"
            }
        }
    },
    "required": [
        "function",
        "connectionData"
    ],
    "additionalProperties": false
}